.page-card
	background-color #000
	height 100%;
	width 100%

	&--next
		position absolute
		top 10px
		left 50%
		width 5vmin
		height 5vmin
		border-radius 50% 50%
		background-color #202328
		cursor pointer
		transform translateX(-50%)
		z-index 12
		transition opacity .5s ease
		opacity .7

		&:hover
			opacity 1

		&--title
			color $backgroundColor
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)

	&--article
		position absolute
		height 100%
		width 100%
		position absolute

	&--share-buttons
		position fixed
		right 10px;
		bottom 0
		z-index 11

		.fa
			width 20px
			display inline-block
			text-align center

		a
			margin 8px
			display block
			position relative
			left 0

			&.share-btn:visited
			&.share-btn
				margin 0
				box-sizing border-box
				position relative
				display inline-block
				font-family sans-serif
				color #333
				padding 4px
				text-transform none
				background-color #F3F3F3
				border 0
				border-top-left-radius .5em
				border-top-right-radius .5em
				font-family sans-serif
				font-size 1.2rem
				letter-spacing 1px
				transition all .3s ease

				&:focus
				&:active
				&:hover
					color #333
					background-color #fff
					box-shadow 0 0 10px 2px #e0e0e0

				&.share-btn-branded
					display none
					&.share-btn-twitter:hover
						color #fff
						background #55acee

					&.share-btn-facebook:hover
						color #fff
						background #3b5998

					&.share-btn-googleplus:hover
						color #fff
						background #d73925

					&.share-btn-viadeo:hover
						color #fff
						background #F4982B

					&.share-btn-linkedin:hover
						color #fff
						background #0976b4

					&.share-btn-pinterest:hover
						color #fff
						background #b61d23

				&.share-btn-email
					display none
					&:hover
						color #fff
						background #FFCC00

		@media (min-width 768px)
			right -64px
			top 50%
			bottom auto
			transform translateY(-50%)

			a
				&.share-btn
					display block
					margin-top 10px
					margin-bottom 10px
					border-top-right-radius 0
					border-top-left-radius .5em
					border-bottom-left-radius .5em

					&:hover
						left -64px

					&.share-btn-email
					&.share-btn-branded
						display block

