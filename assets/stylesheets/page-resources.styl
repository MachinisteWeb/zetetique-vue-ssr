.page-resources
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	&--information
	&--breadcrumb
		display none
		@media (min-width 768px)
			display block
		position absolute
		padding 24px 16px
		font-size 1.2rem
		top 0
		right 20px
		z-index 3

	&--breadcrumb
		color $textColor

		ul
			margin-left 16px
			margin-right 16px

		span
			transition letter-spacing .5s ease
			color $linkColor
			cursor pointer

			&:hover
				letter-spacing .08rem

		li span
			color $linkColor

		.is-selected
			span
				cursor initial
				color $textColor

				&:hover
					letter-spacing .04rem

		li.is-selected
			position relative

			span
				color $textColor

			&::before
				color $linkColor
				position absolute
				top 0
				left -16px
				content "â€”"


	&--information
		top auto
		right auto
		bottom 0
		left 0

	&--content
		position absolute
		top 0
		left 0
		width 100%
		height 100%

		h2
			font-size 3rem
			color #000

		p
			font-size 2rem
			padding-bottom 24px

		hr
			background-color $highlightLinkColor
			height 1px
			border 0
			margin 24px auto 24px 0
			width 24px

		&--outer
			position absolute
			top 0
			left 0
			width 100%
			height 100%
			overflow-y auto

		&--inner
			display flex
			flex-basis 100%
			flex-direction column
			@media (min-width 1024px)
				flex-direction row
				height 100%

				&:hover
					& ^[0..1]--cafe
					& ^[0..1]--brain
					& ^[0..1]--speak
					& ^[0..1]--word
						width 23,33333333%

						&:hover
							width 30%

		&--brain
		&--word
			&--image
				order 2

			&--content
				order 1
				justify-content flex-end

		&--cafe
			&--image
				background-size cover
				background-position center center
				background-image url('../media/images/team.jpg')

		&--brain
			&--image
				background-size cover
				background-position center center
				background-image url('../media/images/know-how.jpg')

		&--speak
			&--image
				background-size cover
				background-position center center
				background-image url('../media/images/culture.jpg')

		&--word
			&--image
				background-size cover
				background-position center center
				background-image url('../media/images/others.jpg')

		&--cafe
		&--brain
		&--speak
		&--word
			cursor pointer
			display flex
			justify-content space-between
			transition width .5s ease
			@media (min-width 1024px)
				flex-direction column
				width 25%

			&--image
				flex-basis 50%

			&--content
				padding 24px 16px
				display flex
				flex-direction column
				flex-basis 50%

				&--inner
					position relative
					top -20px
					opacity 0
					transition opacity 1.5s ease, top 1s ease, bottom 1s ease
					^[0..1].is-displayed &
						opacity 1
						top 0

.page-cards
	position absolute
	top 0
	left 0
	width 100%
	height 100%

	h1
		color $highlightTextColor
		font-size 4rem

	hr
		background-color $highlightTextColor
		height 1px
		border 0
		margin 24px auto 24px 0
		width 24px

	&--content
		overflow-y auto
		overflow-x hidden
		height 100%

		&--outer
			margin 0
			padding 0
			list-style-type none

			&:after
				display block
				content " "
				flex(999 999 auto)

		&--header
			padding 24px 24px 0
			background-color #fff
			width calc(100% - 20px)
			top 0
			left 0
			@media (min-width 768px)
				position absolute
				z-index 2

		&--inner
			@media (min-width 768px)
				margin-top 140px
			padding 0 0 0 24px
			display flex
			background-size cover

			&.as-cafe
				background-image url('../media/images/team.jpg')

			&.as-brain
				background-image url('../media/images/know-how.jpg')

			&.as-speak
				background-image url('../media/images/culture.jpg')

			&.as-word
				background-image url('../media/images/others.jpg')

		&--board
			flex-basis calc(100% - 380px)
			padding-top 24px

		&--nav
			flex-basis 380px
			padding 0 24px

			background-color #fff

			@media (max-width 767px)
				display none

			h2
				font-size 2.4rem

		&--cards
			&--item
				width 25rem
				margin 0 2rem 2rem 0
				background-color #fff
				float left

				h2
					padding 1rem 1.5rem
					color #000
					cursor pointer

				&--detail
					cursor pointer
					overflow hidden
					padding 0 8px
					background-color #000

					iframe
						margin-top -62px

				&--inner
					padding 1.5rem 1.5rem 0

			&--description
				cursor pointer

			&--go-to
				padding-top 1.5rem
				padding-bottom 1.5rem

				.is-attr
					width 100%

				.button
					display inline-block
					width 100%
					text-align center
					font-size 2rem
					letter-spacing 0.04rem

			&--image
				text-align center
				margin-bottom 1.5rem